<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abcabc"
    tools:context=".PhoneVerification">

    <EditText
        android:id="@+id/OTP_one1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/orange"
        android:ems="10"
        android:focusable="auto"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_two2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/orange"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/OTP_one1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_three3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/orange"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/OTP_two2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_four4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/orange"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/OTP_three3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_five5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/orange"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/OTP_four4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_six6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="@color/orange"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toEndOf="@+id/OTP_five5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Verifybtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/yatra_one"
        android:text="Verify"
        android:textColor="@color/black"
        app:backgroundTint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTP_one1" />

    <Button
        android:id="@+id/Resend_OTP_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Resend OTP"
        android:visibility="gone"
        app:backgroundTint="#046A60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Verifybtn" />

    <TextView
        android:id="@+id/Gen_OTP_After_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yatra_one"
        android:text="Resend OTP"
        android:textColor="@color/orange"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Resend_OTP_Button"
        app:layout_constraintVertical_bias="0.587" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/yatra_one"
        android:text="OTP sent to your phone"
        android:textColor="@color/orange"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>