<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_streaks"
    tools:context=".verify_otp">

    <EditText
        android:id="@+id/OTP_four"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#F57C00"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="#F57C00"
        app:layout_constraintStart_toEndOf="@+id/OTP_three"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_one"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#F57C00"
        android:ems="10"
        android:focusable="auto"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="#F57C00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_two"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#F57C00"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="#F57C00"
        app:layout_constraintStart_toEndOf="@+id/OTP_one"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_three"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#F57C00"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="#F57C00"
        app:layout_constraintStart_toEndOf="@+id/OTP_two"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_six"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#F57C00"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="#F57C00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/OTP_five"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OTP_five"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="#F57C00"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="#F57C00"
        app:layout_constraintStart_toEndOf="@+id/OTP_four"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/OTP_Verification_Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#F57C00"
        android:text="Verify"
        android:textColor="#120A0A"
        app:backgroundTint="#046A60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTP_one" />

</androidx.constraintlayout.widget.ConstraintLayout>
